<div class="container">
    <h2>顧客列表</h2>
    <div class="row">
        <div class="col"></div>
        <div class="col-10">
            <table class="table">
                <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">顧客名稱</th>
                    <th scope="col">喜愛產品</th>
                </tr>
                </thead>
                <tbody>
                {{#each customers}}
                    <tr>
                        <th scope="row">{{@index}}</th>
                        <td>{{this.name}}</td>
                        <td>{{this.productName}}</td>
                    </tr>
                {{/each}}
                </tbody>
            </table>
        </div>
        <div class="col"></div>
    </div>
</div>


